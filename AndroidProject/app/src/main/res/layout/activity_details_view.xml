<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.details.DetailsView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="32dp"
            android:layout_gravity="center"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:textColor="#000000"
            tools:text="Title" />

        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:textColor="#000000"
            tools:text="Info" />

        <TextView
            android:id="@+id/tvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:textColor="#000000"
            tools:text="id" />

        <TextView
            android:id="@+id/tvProvincia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:textColor="#000000"
            tools:text="Provincia" />

        <TextView
            android:id="@+id/tvPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:text="Precio"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvCiudad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:text="Ciudad"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvDisponibilidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:text="Disponibilidad"
            android:textColor="#000000" />

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_marginLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="306dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/charger1"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:layout_marginLeft="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logo1"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="0" />

                <TextView
                    android:id="@+id/tvConector1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/charger2"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:layout_marginLeft="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logo2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="0" />

                <TextView
                    android:id="@+id/tvConector2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:textColor="#000000" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/type3"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:layout_marginLeft="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logo3"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="0" />

                <TextView
                    android:id="@+id/tvConector3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:textColor="#000000" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>